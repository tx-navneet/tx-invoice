{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "no-unused-vars": "off",
      "react/react-in-jsx-scope": "off" 
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  